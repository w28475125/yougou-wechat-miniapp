
page{ padding-bottom: 90rpx;}
.swiper{
	height: 40vh;
}
.swiper-item{
	height: 100%;
	overflow: hidden;
	display: flex;
	justify-content: center;
	align-items: center;
}
.swiper-item image{
	width: 60%;
}

.goods-info{
	display: flex;
	flex-direction: column;
}
.goods-price{
	color: var(--themeColor);
	font-size: 36rpx;
	font-weight: bold;
	padding: 10rpx 5rpx;
}
.goods-info-row{
	display: flex;
	padding: 0 10rpx;
	justify-content: space-between;
}
.good-title{
	flex: 4;
	display: -webkit-box;
	overflow: hidden;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	padding: 0 10rpx;
}
.good-collect-row{
	flex: 1;
	border-left: 1rpx solid #ccc;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.good-collect-row.active{
	color: var(--themeColor);
}

.good-introduce{
	padding: 20rpx 10rpx;
	font-size: 40rpx;
	color: var(--themeColor);
	font-weight: bold;
	border-top: 1rpx solid #ccc;
}


.bottom-bar{
	height: 90rpx;
	width: 100%;
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	display: flex;
}
.left-row{
	flex: 5;
	background-color: #fff;
	display: flex;
}
.left-row .item{
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	font-size: 28rpx;
	position: relative;
}
.left-row .item button{
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	opacity: 0;
}
.right-row{
	flex:4;
	display: flex;
	justify-content: center;
	align-items: center;
}
.right-row .add-cart-box, .right-row .buy-box{
	flex: 1;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #fff;
	font-weight: bold;
	font-size: 30rpx;
	height: 100%;
}
.right-row .add-cart-box{
	background-color: sandybrown;
}
.right-row .buy-box{
	background-color: red
}